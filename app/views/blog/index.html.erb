<% @blog.each {|h| x = h.last[0] %>

<div data-contenttype="page" data-locale="en-us">
   <div class="blog-page-banner" style="background: rgb(113, 91, 221);">
      <div class="blog-page-content">
         <h1 class="hero-title"><%= x["page_components"].first["hero_banner"]["banner_title"] %></h1>
         <p class="hero-description"><%= x["page_components"].first["hero_banner"]["banner_description"] %></p>
      </div>
   </div>
</div>
<% } %> 
<div class="blog-container">
   <div class="blog-column-left">
      <% @blog_archieved_false["items"].each {|x|  %>
      <div class="blog-list">
         <a href="<%= x[:url]%>">
            <%= image_tag("#{x["featured_imageConnection"]["edges"][0]["node"]["url"]}", alt: "#{x["featured_imageConnection"]["edges"][0]["node"]["filename"]}", class: "blog-list-img" ) %>
         </a>
         <div class="blog-content">
            <a href="<%= sanitize(x["url"]) %>">
               <h3><%= sanitize(x["title"]) %></h3>
            </a>
            <p><%= x["date"].to_date.strftime("%a, %B %d %Y") %>, <strong><%== x["authorConnection"]["edges"][0]["node"]["title"] %></strong></p>
            <div class="blog_body" style="overflow: hidden;text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 8;       line-clamp: 2; -webkit-box-orient: vertical;">
               <%= x["body"] %>
            </div>
            
            <a href="<%= x["url"]%>"><span>Read more --&gt;</span></a>
         </div>
      </div>
      <% } %> 
      
   </div>
   <div class="blog-column-right">
      <h2>Archived Blogs</h2>
      <% @blog_archieved_true["items"].each {|x|  %>
      <a href="<%= x["url"]%>">
         <div>
            <h4><%= x["title"] %></h4>
            <div style="overflow: hidden;text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3;line-clamp: 2; -webkit-box-orient: vertical;">
               <%= x["body"] %>
            </div>
         </div>
      </a>
      <br/>
      <% } %> 
   </div>
</div>